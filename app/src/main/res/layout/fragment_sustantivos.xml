<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/regresar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="25dp"
            android:src="@drawable/regreso"
            android:scaleType="fitXY"
            android:background="#00FFFFFF">
        </ImageButton>

        <TextView
            android:id="@+id/cabecera"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="cabecera"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"
            android:textSize="30dp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="end"
        android:background="@color/white"
        android:id="@+id/dele">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="horizontal"
        android:background="@color/grisaseo">



        <ImageButton
            android:id="@+id/meses"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/meses_icono"
            android:background="@drawable/sombreado"/>

        <ImageButton
            android:id="@+id/semanas"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="55dp"
            android:src="@drawable/semana_icono"
            android:background="@drawable/sombreado"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/grisaseo">

        <ImageButton
            android:id="@+id/animales"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/animales_icono"
            android:background="@drawable/sombreado"/>

        <ImageButton
            android:id="@+id/frutas"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/frutas_icono"
            android:background="@drawable/sombreado"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/grisaseo">

        <ImageButton
            android:id="@+id/familia"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="55dp"
            android:src="@drawable/familia_icono"
            android:background="@drawable/sombreado"
            />

        <ImageButton
            android:id="@+id/cosas"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="55dp"
            android:src="@drawable/extras_icono"
            android:background="@drawable/sombreado"/>

    </LinearLayout>


</LinearLayout>